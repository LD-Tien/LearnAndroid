<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/listViewTraiCay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:drawSelectorOnTop="false"
        />

    <EditText
        android:id="@+id/editTextTraiCay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Tên trái cây"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editTextTraiCay"
        tools:layout_editor_absoluteX="32dp"
        >

        <Button
            android:id="@+id/buttonThem"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:text="Thêm"
            android:drawableLeft="@drawable/ic_baseline_add_24"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

        <Button
            android:id="@+id/buttonSua"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginVertical="16dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Sửa"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

        <Button
            android:id="@+id/buttonXoa"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Xoá"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>